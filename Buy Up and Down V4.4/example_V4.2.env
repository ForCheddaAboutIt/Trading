# ==============================================================================
# POLYMARKET API CREDENTIALS (REQUIRED)
# ==============================================================================
# Your Polygon wallet address
POLYMARKET_FUNDER=0xYourAddressHere

# API Keys (from https://polymarket.com/profile/api-keys)
POLYMARKET_API_KEY=YourApiKey
POLYMARKET_API_SECRET=YourApiSecret
POLYMARKET_API_PASSPHRASE=YourPassphrase

# Private Key (Keep Safe!)
POLYMARKET_PRIVATE_KEY=YourPrivateKey
POLYMARKET_SIGNATURE_TYPE=1

# ==============================================================================
# GLOBAL BOT SETTINGS
# ==============================================================================
# Trading Mode: 'true' = Paper Trading (Simulated), 'false' = Real Money
DRY_RUN=true

# Market Discovery
# Skip the first market found to ensure indicators are fresh? (Recommended: true)
SKIP_FIRST_MARKET=false
# Minimum minutes remaining in the 15m candle to allow entry (Avoids Gamma risk)
STRATEGY_MIN_TIME_REMAINING=5

# Risk Management (Per Bot)
# Percent of SIM_BALANCE (or real balance) to risk per trade
STRATEGY_RISK_PER_TRADE_PERCENT=0.05
SIM_BALANCE=100

# ==============================================================================
# BOT A: CONTRARIAN SHORT (SIMULATION 3)
# ==============================================================================
# Logic: Buy DOWN/NO when market is "Absorbing" (High Vol, Stalled Price)
# Interpretation: MFI is screaming buy (>90) but Price isn't moving -> TRAP.
SHORT_MFI_ENTRY_MIN=90.0
SHORT_STOCH_ENTRY_MAX=12.0
# Note: We want Stoch LOW (price stalling at lows) while MFI is HIGH (absorption)

# ==============================================================================
# BOT B: PANIC LONG (ORIGINAL)
# ==============================================================================
# Logic: Buy UP/YES when market is "Crashing" (Panic Selling)
# Interpretation: MFI and Stoch both collapse -> OVERSOLD.
LONG_MFI_ENTRY_MAX=8.0
LONG_STOCH_ENTRY_MAX=20.0

# ==============================================================================
# SHARED EXIT LOGIC
# ==============================================================================
STRATEGY_TP_PERCENT=1
STRATEGY_TRAILING_STOP_ENABLED=true
STRATEGY_ATR_MULTIPLIER=3.0

# Checkpoints (Time-based validity checks)
# T+4 Minutes: Must be up 15% or +$0.02
STRATEGY_T4_MINUTES=4
STRATEGY_T4_PNL_PERCENT=0.15
STRATEGY_T4_PRICE_BUMP=0.02

# RSI Exhaustion Thresholds
STRATEGY_RSI_EXIT_LONG=70.0
STRATEGY_RSI_EXIT_SHORT=30.0

# T+6 Minutes: Hard Stop
STRATEGY_T6_MINUTES=6
STRATEGY_T6_PNL_PERCENT=0.25
STRATEGY_T6_PRICE_BUMP=0.03

# Panic/Emergency Exits (Indicator Normalization)
STRATEGY_MFI_PANIC_EXIT=50
STRATEGY_STOCH_PANIC_EXIT=80