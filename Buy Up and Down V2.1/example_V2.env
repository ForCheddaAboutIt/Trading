# Polymarket API Credentials (required)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=

# --- Panic Exhaustion Strategy Settings ---
# ------------------------------------------

# 1. ENTRY FILTERS
# MFI Threshold (Strict: 8). Must be BELOW this to enter.
STRATEGY_MFI_ENTRY_MAX=8

# Stoch %K Threshold (Strict: 20). Must be BELOW this to enter.
STRATEGY_STOCH_K_ENTRY_MAX=20

# Minimum time remaining in market to allow entry (e.g., 5-7 minutes)
STRATEGY_MIN_TIME_REMAINING=5

# 2. POSITION SIZING
# Percent of total Account Balance to risk per trade (0.1 = 5%)
STRATEGY_RISK_PER_TRADE_PERCENT=0.1

# Stoch %K level for FULL size (e.g., if Stoch <= 10, buy 100% of risk amount)
STRATEGY_STOCH_K_FULL_SIZE=10

# Stoch %K level for REDUCED size (e.g., if 10 < Stoch <= 20, buy 75% of risk amount)
# Note: This is a multiplier. 0.75 = 75%
STRATEGY_SIZE_REDUCTION_MULTIPLIER=0.75

# 3. EXIT LOGIC (CHECKPOINTS)
# ------------------------------------------

# Take Profit Trigger (+25%)
STRATEGY_TP_PERCENT=0.25

# Checkpoint 1: Early Proof (T+4 minutes)
STRATEGY_T4_MINUTES=4
STRATEGY_T4_PNL_PERCENT=0.15
STRATEGY_T4_PRICE_BUMP=0.02

# Checkpoint 2: Hard Stop (T+6 minutes)
STRATEGY_T6_MINUTES=6
STRATEGY_T6_PNL_PERCENT=0.25
STRATEGY_T6_PRICE_BUMP=0.03

# 4. EMERGENCY EXITS
STRATEGY_MFI_PANIC_EXIT=20
STRATEGY_STOCH_PANIC_EXIT=40
MFI_ABORT_THRESHOLD=90

# Bot Configuration
# Order type: FOK, FAK, GTC
ORDER_TYPE=FOK
DRY_RUN=true
VERBOSE=false
SIM_BALANCE=100
COOLDOWN_SECONDS=2
POLYMARKET_MARKET_SLUG=

# WebSocket Configuration
USE_WSS=true
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com