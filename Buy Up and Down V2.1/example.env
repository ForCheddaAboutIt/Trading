# Polymarket API Credentials (required)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=

# --- Panic Exhaustion Strategy Settings ---
# ------------------------------------------

# 0. SAFETY SETTINGS
# Set to 'true' to skip the first market after bot start (avoids bad data).
# Set to 'false' to trade immediately upon startup.
SKIP_FIRST_MARKET=false

# 1. ENTRY FILTERS
# MFI Threshold (Strict: 8). Must be BELOW this to enter.
STRATEGY_MFI_ENTRY_MAX=8

# Stoch %K Threshold (Strict: 20). Must be BELOW this to enter.
STRATEGY_STOCH_K_ENTRY_MAX=20

# Minimum time remaining in market to allow entry (e.g., 5-7 minutes)
STRATEGY_MIN_TIME_REMAINING=5

# 2. POSITION SIZING
# Percent of total Account Balance to risk per trade (0.05 = 5%)
STRATEGY_RISK_PER_TRADE_PERCENT=0.05

# Stoch %K level for FULL size (e.g., if Stoch <= 10, buy 100% of risk amount)
STRATEGY_STOCH_K_FULL_SIZE=10

# Stoch %K level for REDUCED size (e.g., if 10 < Stoch <= 20, buy 75% of risk amount)
# Note: This is a multiplier. 0.75 = 75%
STRATEGY_SIZE_REDUCTION_MULTIPLIER=0.75

# 3. EXIT LOGIC (CHECKPOINTS)
# ------------------------------------------

# Take Profit Trigger (+25%)
STRATEGY_TP_PERCENT=0.25

# Checkpoint 1: Early Proof (T+4 minutes)
STRATEGY_T4_MINUTES=4
STRATEGY_T4_PNL_PERCENT=0.15
STRATEGY_T4_PRICE_BUMP=0.02

# Checkpoint 2: Hard Stop (T+6 minutes)
STRATEGY_T6_MINUTES=6
STRATEGY_T6_PNL_PERCENT=0.25
STRATEGY_T6_PRICE_BUMP=0.03

# 4. CHEAP ENTRY & REVERSAL SETTINGS
# Maximum price to buy. Bot will ignore anything more expensive.
STRATEGY_ENTRY_MAX_PRICE=0.30

# Minimum RSI. Prevents buying "falling knives" (crashes that aren't stopping).
# Recommended: 30.0 (Winners had RSI ~37, Losers had RSI ~22)
STRATEGY_RSI_ENTRY_MIN=30.0

# Minimum Bollinger %B. Prevents buying when price is free-falling below bands.
# Recommended: -0.1 (Winners were > -0.1, Losers were < -0.3)
STRATEGY_BB_PCT_B_ENTRY_MIN=-0.1

# 4. EMERGENCY EXITS
STRATEGY_MFI_PANIC_EXIT=50
STRATEGY_STOCH_PANIC_EXIT=80
MFI_ABORT_THRESHOLD=90

# 5. TRAILING STOP
# Set to 'true' to enable the trailing stop logic
STRATEGY_TRAILING_STOP_ENABLED=true

# The drop amount in dollars (e.g. 0.05 = 5 cents)
STRATEGY_TRAILING_STOP_AMOUNT=0.05

# Bot Configuration
# Order type: FOK, FAK, GTC
ORDER_TYPE=FOK
DRY_RUN=true
VERBOSE=false
SIM_BALANCE=100
COOLDOWN_SECONDS=2
POLYMARKET_MARKET_SLUG=

# WebSocket Configuration
USE_WSS=true
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com