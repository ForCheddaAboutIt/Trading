# Polymarket API Credentials (required)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER=

# Strategy: Average Down
# ----------------------
# Price to start buying (e.g., 0.35 means buy if price <= $0.35)
ENTRY_PRICE=0.35

# Price to STOP buying (e.g., 0.20 means don't buy if price dips below $0.20)
MIN_PRICE_THRESHOLD=0.20

# Initial number of shares to buy for the first entry
INITIAL_ORDER_SIZE=5

# Size multiplier for averaging down (e.g., 1.5 means next buy is 1.5x larger)
SIZE_MULTIPLIER=1.5

# Price drop interval to trigger next buy (e.g., 0.02 means buy every 2 cent drop)
PRICE_DROP_INTERVAL=0.10

# Target profit above Average Cost to trigger sell (e.g., 0.05 means AvgCost + $0.05)
PROFIT_TARGET=0.05

# Percentage of position to sell at first target (0.5 = 50%)
SELL_PERCENTAGE=1

# Trailing stop percentage after first sell (0.05 = 5%)
TRAILING_STOP_PERCENT=0.1

# Stop buying if market time remaining is less than X minutes
STOP_BUYING_TIME_MINUTES=5

# --- MFI Strategy Settings ---
# Abort strategy if MFI hits this high (e.g., 100)
MFI_ABORT_THRESHOLD=100

# UP Side: Only buy if MFI is below this (e.g., 20)
MFI_BUY_UP_MAX=20

# DOWN Side: Only buy if MFI is below this (e.g., 20)
MFI_BUY_DOWN_MIN=80

# Panic Sell Blocker: Do not panic sell if MFI is below this (e.g., 20)
MFI_PANIC_BLOCK_MAX=30

# --- Panic Override Settings ---
# Trigger panic buy if MFI is below this (e.g. 15 is extremely oversold)
PANIC_MFI_THRESHOLD=15

# Allow wider spreads during panic (0.15 = 15% spread allowed)
PANIC_SPREAD_TOLERANCE=0.15

# Price must be below Bollinger Lower Band by this % (e.g. -0.1 = 10% below band)
PANIC_BB_PCT_B=-0.1

# --- New Logic Parameters ---
ENV_MIN_VOLATILITY=0.003
ENV_MAX_SPREAD=0.05
ENV_RSI_BUY_UP=30
ENV_RSI_BUY_DOWN=70
ENV_STOCH_BUY_UP=20
ENV_STOCH_BUY_DOWN=81
ENV_CCI_BUY_UP=-100
ENV_CCI_BUY_DOWN=100
ENV_MAX_DRAWDOWN=0.15
ENV_ATR_STOP_MULT=2.5
ENV_ATR_GRID_MULT=1.5

# Bot Configuration
# Order type / time-in-force: FOK, FAK, GTC
ORDER_TYPE=FOK
DRY_RUN=true
VERBOSE=false
SIM_BALANCE=100
COOLDOWN_SECONDS=2
POLYMARKET_MARKET_SLUG=

# WebSocket Configuration
USE_WSS=true
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com

