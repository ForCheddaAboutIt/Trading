# Polymarket API Credentials
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_FUNDER=

# --- STRATEGY: POLYQUANT-15M ---
# -------------------------------

# 1. MARKET DISCOVERY (Gamma API)
# The tag to filter for (e.g., "bitcoin", "ethereum")
STRAT_ASSET_TAG=bitcoin

# Skip the market expiring soonest? (True = Safer, avoids Gamma/Pin risk)
SKIP_FIRST_MARKET=true

# 2. INDICATOR SETTINGS (Internal Candles)
# Lookback period for MFI and Stoch
STRAT_MFI_PERIOD=14
STRAT_STOCH_PERIOD=14

# Triggers (Strict Exhaustion)
# Buy Signal: MFI <= 8 AND Stoch <= 20
STRAT_MFI_TRIGGER=8
STRAT_STOCH_TRIGGER=20

# 3. EXECUTION & RISK
# Fixed wager size per trade in USDC (e.g., $50)
POSITION_SIZE_USDC=50

# Minimum Liquidity Depth (USDC)
# Sum of Bids within 5% of Midpoint must exceed this to enter.
MIN_LIQUIDITY_USDC=1000

# 4. EXITS
# Time Stop: If trade isn't working after X minutes, close it.
TIME_STOP_MINS=5

# Emergency Stop: If price drops X% from entry, panic sell.
# 0.15 = 15% drop
EMERGENCY_DROP_PCT=0.15

# Bot Config
ORDER_TYPE=FOK
DRY_RUN=true
VERBOSE=false
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com